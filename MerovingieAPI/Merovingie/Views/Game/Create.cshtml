@model Merovingie.Models.Game.GameDescriptorModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>GameDescriptorModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @for (int i = 0; i < Model.Resources.Count; i++)
                {
                    @Model.Resources.ElementAt(i).Key.ToString();
                    @Html.TextBox(Model.Resources.ElementAt(i).Key.ToString(), "^[0-9]+$", Model.Resources.ElementAt(i).Value.ToString(), new { @class = "form-control" });

                }
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Load" asp-controller="Game">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
